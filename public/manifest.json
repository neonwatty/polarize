{
  "manifest_version": 3,
  "name": "Code Overlay Brightener",
  "version": "0.1",
  "description": "Adds a resizable transparent overlay to help brighten code blocks in YouTube tutorials.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "polarize.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["assets/content.js"]
    }
  ]
}
